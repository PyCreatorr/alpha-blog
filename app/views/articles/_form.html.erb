<div class="container">
  <div class="row d-flex justify-content-center p-6">
    <div class="card shadow-sm m-4 p-4" >
      <%= render 'shared/errors', obj: @article %>

        <%= form_with model: @article, local: true do |f| %>
          <div class="mb-3">
            <%= f.label :tile, class: "form-label" %>
            <%= f.text_field :title, class: "form-control", placeholder: "Title" %>
          </div>
          <div class="mb-3">
            <%= f.label :description, class: "form-label" %>
            <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Description" %>
          </div>
          <div class="mb-3">          
            <%= f.label :category, class: "form-label" %>
            <%= collection_select(:categories, :category_ids, Category.all, :id, :name, {prompt: "Please Select a Sector"}, 
            {multiple: true, size: 4, class: "form-select"}) %>

          </div>

          <div class="mb-0 text-center d-grid gap-2">
            <%= f.submit class: "btn btn-primary"  %>
          </div>
        <% end %>
      </div>

    <p><%= link_to 'Cancel and return back to the articles listing', articles_path %></p>
  </div>
</div>


