<div class="container">
  <div class="row d-flex justify-content-center p-6">
    <div class="card shadow-sm m-4 p-4" >
      <%= render 'shared/errors', obj: @user%>

        <%= form_with model: @user, local: true do |f| %>
          <div class="mb-3">
            <%= f.label :username, class: "form-label" %>
            <%= f.text_field :username, class: "form-control", placeholder: "Username" %>
          </div>
          <div class="mb-3">
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email, class: "form-control", placeholder: "Your email" %>
          </div>
          <div class="mb-3">
            <%= f.label :password, class: "form-label" %>
            <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
          </div>
          <div class="mb-0 text-center d-grid gap-2">
            <%= f.submit 'Sign up', class: "btn btn-primary"  %>
          </div>
        <% end %>
      </div>

    <p><%= link_to 'Cancel and return back to the articles listing', articles_path %></p>
  </div>
</div>


