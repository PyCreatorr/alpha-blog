
<div id = "page-content">
  <h1 class = "text-center m-4" >Listing all categories</h1>
  <%= will_paginate @categories, class: "flickr_pagination" %>

  <div class="container" >

    <% @categories.each do |category| %>
      <div class="row d-flex justify-content-center p-3 " >

          <div class="card text-center shadow-sm rounded-3" style="padding:0px">
            <div class="card-body">
              <h5 class="card-title"><%= link_to category.name, category_path(category), class: "primary text-underline-hover" %></h5>
              <p class="mb-0"><%= pluralize(category.articles.count, 'article') %> </p>
             
           </div>
            <div class="card-footer text-body-secondary">
              <small>Created <%= time_ago_in_words(category.created_at) %> ago,
              edited <%= time_ago_in_words(category.updated_at) %> ago</small>
            </div>
          </div>

      </div>
    <% end %>

  </div>

  <%= will_paginate @categories, class: "flickr_pagination" %>

</div>
