<div id = "page-content">
    <h1 class = "text-center m-4" >Create new category</h1>

<div class="container">
  <div class="row d-flex justify-content-center p-6">
    <div class="card shadow-sm m-4 p-4" >
      <%= render 'shared/errors', obj: @category%>

        <%= form_with model: @category, local: true do |f| %>
          <div class="mb-3">
            <%= f.label :name, "Category name", class: "form-label" %>
            <%= f.text_field :name, class: "form-control", placeholder: "Enter a new category" %>
          </div>
          <div class="mb-0 text-center d-grid gap-2">
            <%= f.submit("Create category", class: "btn btn-primary")  %>
          </div>
        <% end %>
      </div>

    <p><%= link_to 'Cancel and return back to the categories listing', categories_path %></p>
  </div>
</div>

</div>