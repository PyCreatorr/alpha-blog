<div class="container">
  <div class="row d-flex justify-content-center p-6">
    <div class="card shadow-sm m-4 p-4" >
      <%= render 'shared/errors', obj: @category %>

        <%= form_with model: @category, local: true do |f| %>
          <div class="mb-3">
            <%= f.label :name, class: "form-label" %>
            <%= f.text_field :name, class: "form-control", placeholder: "Title" %>
          </div>
          <div class="mb-0 text-center d-grid gap-2">
            <%= f.submit class: "btn btn-primary"  %>
          </div>
        <% end %>
      </div>
    <p><%= link_to 'Cancel and return back to the categorys listing', category_path(@category) %></p>
  </div>
</div>


